<Window x:Class="BuildCompanyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildCompanyWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="820" Background="DeepSkyBlue">
    <Grid Margin="0,0,0,4">

        <Grid.RowDefinitions>
            <RowDefinition Height="69"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Width="143" Height="64" Source="/Image/logo.jpg"/>
            <TextBlock Width="501" TextAlignment="Center" FontSize="32"><Run Text="BuildCompany"/></TextBlock>
        </StackPanel>

        <Frame Name="FrmMain" Margin="-10,5,10,0" NavigationUIVisibility="Hidden" Grid.Row="1"/>

    </Grid>
</Window>
